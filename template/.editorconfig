# This the default editor configuration, see http://editorconfig.org for our codebase.
# Here are some resources for what's supported for .NET/C#
# https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference?view=vs-2019
# https://kent-boogaart.com/blog/editorconfig-reference-for-c-developers
# https://www.jetbrains.com/help/resharper/Using_EditorConfig.html
 
# Please refer to https://myobconfluence.atlassian.net/wiki/spaces/AB/pages/946601986/C+Sharp+Coding+Standards
# for our coding and naming conversions.  Please note that change to this config file should be agreed by
# by the crews, and the above document should reflect this also.

# Note: the formating of the xsing code is not changed unless you format the document. Ctl+K, Ctl+D
root = true

# Indentation and spacing
[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
max_line_length=80:error

# New line preferences
end_of_line = crlf
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4
dotnet_sort_system_directives_first = true

#### .NET Naming Conventions ####

# Indentation preferences
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_indent_case_contents = true

# New line preferences
csharp_new_line_before_catch = true
csharp_new_line_before_else = true

#### .NET Coding Conventions ####

# var preferences
csharp_style_var_for_built_in_types = false:error
csharp_style_var_elsewhere = true:silent
csharp_style_var_when_type_is_apparent = true:error
